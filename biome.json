{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [".next", "node_modules", "dist", ".vercel", "*.min.js"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noMisleadingCharacterClass": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"useTemplate": "warn",
				"noParameterAssign": "warn",
				"noNonNullAssertion": "warn"
			},
			"performance": {
				"noDelete": "warn"
			},
			"security": {
				"noGlobalEval": "warn",
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 150,
		"lineEnding": "lf"
	}
}
